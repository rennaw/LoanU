<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:text="TextView" android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
        android:id="@+id/lblName" android:paddingTop="20dp" android:paddingLeft="10dp"></TextView>
    <TextView android:text="TextView" android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:layout_alignParentTop="true" android:layout_alignParentRight="true"
        android:id="@+id/lblPhone" android:paddingTop="20dp" android:paddingRight="10dp"></TextView>
    <TextView android:text="TextView" android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content" android:id="@+id/lblItem"
        android:layout_width="wrap_content" android:layout_below="@+id/lblPhone"
        android:layout_alignParentLeft="true" android:paddingLeft="10dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblDate"
        android:layout_below="@+id/lblPhone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="TextView" android:paddingRight="10dp"/>

</RelativeLayout>